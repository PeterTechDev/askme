    <div id="home" class="content">

        <header>
            <a href="/">
                <img src="/images/Logo.svg" alt="Logo do site" />
            </a>
        </header>


        <div id="bg">
            <div class="ball top"></div>
            <div class="ball botton"></div>
        </div>

        <main>
            <div class="container">
                <!-- vai renderizar de acordo com a url (index ou create-room) -->
                <%- include(`parts/${page}`) %>
            </div>
        </main>

    </div>

