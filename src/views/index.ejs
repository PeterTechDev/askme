<!-- Central de perguntas anônimas -->
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Título no navegador -->
    <title>Criar sala - NLW Discover</title>

    <!-- Padão UTF-8(habilitar caracteres especiais da lingua portuguesa) -->
    <meta charset="UTF-8">

    <!-- compatibilidade com o navegador  EDGE -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- View Port -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <!-- link rel para chamar o CSS dentro do HTML -->
    <link rel="stylesheet" href="styles/global.css">
    <link rel="stylesheet" href="styles/index.css">

    <!-- link rel para as fontes -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Poppins:wght@500;700&display=swap"
        rel="stylesheet">
</head>

<body>

    <div id="home" class="content">

        <header>
            <img src="./images/Logo.svg" alt="Logo do site" />
        </header>


        <div id="bg">
            <div class="ball top"></div>
            <div class="ball botton"></div>
        </div>

        <main>
            <div class="container">
                <!-- formulário -->
                <section>
                    <h2>Entre como participante</h2>
                    <form action="">
                        <!-- sr-only (screen only) serve para esconder o label do navegador. Existirá, mas ficará escondido. -->
                        <label class="sr-only" for="room-id">Código da sala</label>
                        <input id="room-id" type="number" placeholder="Código da sala">
                        <button>
                            <img src="./images/enter-room.svg" alt="Entrar na sala">
                            Entrar na sala
                        </button>
                    </form>
                </section>

                <div class="separator">
                    <div></div>
                    <div>ou</div>
                    <div></div>
                </div>

                <section>
                    <h2>Crie sua própria sala de forma fácil</h2>
                    <a href="/create-room" class="button outLined">
                        <img src="/images/users .svg" alt="Criar Sala">
                        Criar Sala
                    </a>
                </section>

            </div>
        </main>

    </div>

</body>

</html>